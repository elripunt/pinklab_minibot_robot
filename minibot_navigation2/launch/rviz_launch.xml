<?xml version='1.0' ?>
<launch>
    <arg name="namespace" default="navigation" />
    <arg name="use_namespace" default="false" />
    <arg name="rviz_config" default="" />

    <!-- Launch rviz with namespace -->
    <node pkg="rviz2" exec="rviz2" name="rviz_with_namespace" output="screen" args="">
        <remap from="/tf" to="tf" />
        <remap from="/tf_static" to="tf_static" />
        <remap from="/goal_pose" to="goal_pose" />
        <remap from="/clicked_point" to="clicked_point" />
        <remap from="/initialpose" to="initialpose" />
        <param name="namespace" value="$(var params_file)"/>
    </node>
</launch>